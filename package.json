    "vitest": "^1.6.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.18.0",
    "eslint": "^9.2.0",
    "eslint-plugin-format": "^0.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "pnpm commitlint --edit $1"
